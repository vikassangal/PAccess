    -->
    <comment>
      Create Quartz.Locks Table
    </comment>
    <createTable schemaName="Quartz" tableName="Locks">
      <column name="Lock_Name" type="VARCHAR(40)">
        <constraints nullable="false" primaryKey="true" primaryKeyName="PK_Locks" />
